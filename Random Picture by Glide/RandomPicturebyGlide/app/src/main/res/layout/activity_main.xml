<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="132dp"
            app:strokeWidth="4dp"
            android:background="@drawable/loading_img"
            app:imageUrl='@{"https://picsum.photos/200?rand="}'
            app:layout_constraintEnd_toStartOf="@id/ivPic2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:strokeWidth="4dp"
            android:background="@drawable/loading_img"
            app:imageUrl='@{"https://picsum.photos/200?rand="}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPic1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="102dp"
            app:strokeWidth="4dp"
            android:background="@drawable/loading_img"
            app:imageUrl='@{"https://picsum.photos/200?rand="}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivPic4"
            app:layout_constraintTop_toBottomOf="@id/ivPic1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPic4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="8dp"
            app:strokeWidth="4dp"
            android:background="@drawable/loading_img"
            app:imageUrl='@{"https://picsum.photos/201?rand="}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPic3"
            app:layout_constraintTop_toBottomOf="@id/ivPic2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>